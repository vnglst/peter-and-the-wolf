{
  "name": "peter-and-the-wolf",
  "version": "2.1.0",
  "description": "Peter and the Wolf Progressive Web App",
  "main": "index.js",
  "repository": "https://github.com/vnglst/peter-and-the-wolf",
  "author": "Koen van Gilst",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-serve --open",
    "build": "cross-env NODE_ENV=production webpack; bundlesize",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write 'src/**/*.js'",
    "test": "jest --coverage",
    "precommit": "lint-staged",
    "deploy": "yarn test; yarn build; netlify deploy"
  },
  "lint-staged": {
    "*.{js,jsx,md}": [
      "prettier --write --single-quote",
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "howler": "^2.0.14",
    "prevent-double-tap-zoom": "^2.0.4",
    "prop-types": "^15.6.2",
    "react": "16.5.0",
    "react-dom": "16.5.0",
    "react-hot-loader": "4.3.6"
  },
  "devDependencies": {
    "@babel/core": "7.0.0",
    "@babel/plugin-proposal-class-properties": "7.0.0",
    "@babel/plugin-proposal-decorators": "7.0.0",
    "@babel/plugin-proposal-export-namespace-from": "7.0.0",
    "@babel/plugin-proposal-function-sent": "7.0.0",
    "@babel/plugin-proposal-json-strings": "7.0.0",
    "@babel/plugin-proposal-numeric-separator": "7.0.0",
    "@babel/plugin-proposal-throw-expressions": "7.0.0",
    "@babel/plugin-syntax-dynamic-import": "7.0.0",
    "@babel/plugin-syntax-import-meta": "7.0.0",
    "@babel/plugin-transform-runtime": "7.0.0",
    "@babel/polyfill": "7.0.0",
    "@babel/preset-env": "7.0.0",
    "@babel/preset-react": "7.0.0",
    "@babel/register": "7.0.0",
    "@babel/runtime": "7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "9.0.0",
    "babel-jest": "23.6.0",
    "babel-loader": "8.0.2",
    "browserslist": "4.1.1",
    "bundlesize": "^0.17.0",
    "clean-webpack-plugin": "0.1.19",
    "copy-webpack-plugin": "^4.5.2",
    "cross-env": "5.2.0",
    "css-loader": "1.0.0",
    "cssnano": "^4.1.0",
    "enzyme": "3.6.0",
    "enzyme-adapter-react-16": "1.5.0",
    "eslint": "^5.5.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "3.0.1",
    "eslint-loader": "2.1.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jest": "21.22.0",
    "eslint-plugin-jsx-a11y": "6.1.1",
    "eslint-plugin-markdown": "^1.0.0-beta.6",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-react": "7.11.1",
    "eslint-watch": "4.0.2",
    "file-loader": "2.0.0",
    "html-webpack-plugin": "3.2.0",
    "husky": "0.14.3",
    "identity-obj-proxy": "3.0.0",
    "jest": "23.6.0",
    "jest-enzyme": "^6.0.4",
    "lint-staged": "7.2.2",
    "mini-css-extract-plugin": "0.4.2",
    "node-sass": "4.9.3",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "prettier": "1.14.2",
    "pretty-quick": "1.6.0",
    "rucksack-css": "^1.0.2",
    "sass-loader": "7.1.0",
    "style-loader": "0.23.0",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "webpack": "4.18.0",
    "webpack-cli": "3.1.0",
    "webpack-merge": "4.1.4",
    "webpack-serve": "2.0.2",
    "workbox-webpack-plugin": "^3.5.0"
  },
  "bundlesize": [
    {
      "path": "./build/js/main.*.js",
      "maxSize": "50 kB"
    },
    {
      "path": "./build/css/main.*.css",
      "maxSize": "5 kB"
    }
  ],
  "jest": {
    "automock": false,
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "\\.(css|scss)$": "identity-obj-proxy"
    },
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/setupTests.js",
    "collectCoverageFrom": [
      "src/**/*.js",
      "src/**/*.jsx"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx"
    ]
  }
}
